{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="section">

Nombre de participations : {{list_participation|length}}
<br/>
{% for participation in list_participation%}

<div class="float-left">
    <article>
        <div>
            <figure class="image is-128x128 ml-1">
                 <a href="{{path('event_page',{id:participation.id})}}">
                    <img src="https://loremflickr.com/256/256/album,music/all?lock={{participation.id}}" alt="Image">
                </a>
            </figure>
        <p>{{participation.name}}</p>
        <p>{{participation.description|slice(0, 10) }}...</p>
        <p>{{participation.eventDate|date("m/d/Y H:m:i") }}</p>
        </div>

      
    </article>
</div>
{% endfor %}

</div>


{% endblock %}
